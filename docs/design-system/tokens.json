{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Dear Applicant Design Tokens — W3C Design Tokens Community Group format",

  "color": {
    "$description": "Color palette tokens",

    "primary": {
      "$description": "Teal primary scale (Tailwind teal, adopted as-is)",
      "50":  { "$value": "#F0FDFA", "$type": "color" },
      "100": { "$value": "#CCFBF1", "$type": "color" },
      "200": { "$value": "#99F6E4", "$type": "color" },
      "300": { "$value": "#5EEAD4", "$type": "color" },
      "400": { "$value": "#2DD4BF", "$type": "color" },
      "500": { "$value": "#14B8A6", "$type": "color" },
      "600": { "$value": "#0D9488", "$type": "color", "$description": "Primary action color" },
      "700": { "$value": "#0F766E", "$type": "color" },
      "800": { "$value": "#115E59", "$type": "color" },
      "900": { "$value": "#134E4A", "$type": "color" },
      "950": { "$value": "#042F2E", "$type": "color" }
    },

    "neutral": {
      "$description": "Custom warmgray scale — HSL hue 60 deg, saturation 1-17%. Replaces all stone/gray/slate usage.",
      "50":  { "$value": "#FAFAF8", "$type": "color" },
      "100": { "$value": "#F5F5F2", "$type": "color" },
      "200": { "$value": "#E8E8E4", "$type": "color" },
      "300": { "$value": "#D4D4CF", "$type": "color" },
      "400": { "$value": "#A8A8A2", "$type": "color" },
      "500": { "$value": "#737370", "$type": "color" },
      "600": { "$value": "#5C5C58", "$type": "color" },
      "700": { "$value": "#44443F", "$type": "color" },
      "800": { "$value": "#2C2C28", "$type": "color" },
      "900": { "$value": "#1C1C19", "$type": "color" },
      "950": { "$value": "#121210", "$type": "color" }
    },

    "semantic": {
      "$description": "Semantic status colors with light/dark mode pairs",

      "success": {
        "bg":     { "$value": "#F0FDF4", "$type": "color" },
        "bgDark": { "$value": "rgba(22, 163, 74, 0.15)", "$type": "color" },
        "text":     { "$value": "#15803D", "$type": "color" },
        "textDark": { "$value": "#4ADE80", "$type": "color" },
        "border":     { "$value": "#BBF7D0", "$type": "color" },
        "borderDark": { "$value": "rgba(22, 163, 74, 0.3)", "$type": "color" }
      },
      "warning": {
        "bg":     { "$value": "#FFFBEB", "$type": "color" },
        "bgDark": { "$value": "rgba(217, 119, 6, 0.15)", "$type": "color" },
        "text":     { "$value": "#B45309", "$type": "color" },
        "textDark": { "$value": "#FBBF24", "$type": "color" },
        "border":     { "$value": "#FDE68A", "$type": "color" },
        "borderDark": { "$value": "rgba(217, 119, 6, 0.3)", "$type": "color" }
      },
      "error": {
        "bg":     { "$value": "#FEF2F2", "$type": "color" },
        "bgDark": { "$value": "rgba(220, 38, 38, 0.15)", "$type": "color" },
        "text":     { "$value": "#DC2626", "$type": "color" },
        "textDark": { "$value": "#F87171", "$type": "color" },
        "border":     { "$value": "#FECACA", "$type": "color" },
        "borderDark": { "$value": "rgba(220, 38, 38, 0.3)", "$type": "color" }
      },
      "info": {
        "bg":     { "$value": "#EFF6FF", "$type": "color" },
        "bgDark": { "$value": "rgba(37, 99, 235, 0.15)", "$type": "color" },
        "text":     { "$value": "#2563EB", "$type": "color" },
        "textDark": { "$value": "#60A5FA", "$type": "color" },
        "border":     { "$value": "#BFDBFE", "$type": "color" },
        "borderDark": { "$value": "rgba(37, 99, 235, 0.3)", "$type": "color" }
      }
    },

    "surface": {
      "$description": "Background surface colors for light/dark mode",
      "page":       { "$value": "#FFFFFF", "$type": "color" },
      "pageDark":   { "$value": "#121210", "$type": "color", "$description": "warmgray-950" },
      "card":       { "$value": "#FFFFFF", "$type": "color" },
      "cardDark":   { "$value": "#1C1C19", "$type": "color", "$description": "warmgray-900" },
      "cardAlt":    { "$value": "#FAFAF8", "$type": "color", "$description": "warmgray-50" },
      "cardAltDark":{ "$value": "#2C2C28", "$type": "color", "$description": "warmgray-800" },
      "overlay":      { "$value": "rgba(18, 18, 16, 0.6)", "$type": "color" },
      "overlayDark":  { "$value": "rgba(18, 18, 16, 0.8)", "$type": "color" },
      "sidebar":      { "$value": "#F5F5F2", "$type": "color", "$description": "warmgray-100" },
      "sidebarDark":  { "$value": "#1C1C19", "$type": "color", "$description": "warmgray-900" },
      "input":        { "$value": "#FFFFFF", "$type": "color" },
      "inputDark":    { "$value": "#2C2C28", "$type": "color", "$description": "warmgray-800" }
    },

    "text": {
      "$description": "Text color roles for light/dark mode",
      "primary":       { "$value": "#1C1C19", "$type": "color", "$description": "warmgray-900" },
      "primaryDark":   { "$value": "#F5F5F2", "$type": "color", "$description": "warmgray-100" },
      "secondary":     { "$value": "#5C5C58", "$type": "color", "$description": "warmgray-600" },
      "secondaryDark": { "$value": "#A8A8A2", "$type": "color", "$description": "warmgray-400" },
      "tertiary":      { "$value": "#A8A8A2", "$type": "color", "$description": "warmgray-400" },
      "tertiaryDark":  { "$value": "#737370", "$type": "color", "$description": "warmgray-500" },
      "disabled":      { "$value": "#D4D4CF", "$type": "color", "$description": "warmgray-300" },
      "disabledDark":  { "$value": "#44443F", "$type": "color", "$description": "warmgray-700" },
      "accent":        { "$value": "#0D9488", "$type": "color", "$description": "teal-600 — UI components, buttons" },
      "accentText":    { "$value": "#0F766E", "$type": "color", "$description": "teal-700 — small text links (5.5:1 contrast)" },
      "accentDark":    { "$value": "#14B8A6", "$type": "color", "$description": "teal-500" }
    },

    "border": {
      "$description": "Border color roles for light/dark mode",
      "default":      { "$value": "#E8E8E4", "$type": "color", "$description": "warmgray-200" },
      "defaultDark":  { "$value": "#44443F", "$type": "color", "$description": "warmgray-700" },
      "subtle":       { "$value": "#F5F5F2", "$type": "color", "$description": "warmgray-100" },
      "subtleDark":   { "$value": "#2C2C28", "$type": "color", "$description": "warmgray-800" },
      "input":        { "$value": "#D4D4CF", "$type": "color", "$description": "warmgray-300" },
      "inputDark":    { "$value": "#44443F", "$type": "color", "$description": "warmgray-700" },
      "focus":        { "$value": "rgba(13, 148, 136, 0.3)", "$type": "color", "$description": "teal-600/30" },
      "focusDark":    { "$value": "rgba(20, 184, 166, 0.3)", "$type": "color", "$description": "teal-500/30" },
      "divider":      { "$value": "#E8E8E4", "$type": "color", "$description": "warmgray-200" },
      "dividerDark":  { "$value": "#2C2C28", "$type": "color", "$description": "warmgray-800" }
    }
  },

  "typography": {
    "$description": "Typography scale — Inter (sans), Instrument Serif (serif, wordmark only)",

    "fontFamily": {
      "sans":  { "$value": "'Inter', ui-sans-serif, system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'", "$type": "fontFamily" },
      "serif": { "$value": "'Instrument Serif', Georgia, 'Times New Roman', serif", "$type": "fontFamily" }
    },

    "display": {
      "fontSize":      { "$value": "3rem", "$type": "dimension", "$description": "48px desktop, 30px mobile (1.875rem)" },
      "fontSizeMobile":{ "$value": "1.875rem", "$type": "dimension" },
      "lineHeight":    { "$value": "1.1", "$type": "number" },
      "fontWeight":    { "$value": "700", "$type": "fontWeight" },
      "letterSpacing": { "$value": "-0.025em", "$type": "dimension" }
    },
    "h1": {
      "fontSize":      { "$value": "2.25rem", "$type": "dimension", "$description": "36px desktop, 24px mobile (1.5rem)" },
      "fontSizeMobile":{ "$value": "1.5rem", "$type": "dimension" },
      "lineHeight":    { "$value": "1.2", "$type": "number" },
      "fontWeight":    { "$value": "700", "$type": "fontWeight" },
      "letterSpacing": { "$value": "-0.025em", "$type": "dimension" }
    },
    "h2": {
      "fontSize":      { "$value": "1.875rem", "$type": "dimension", "$description": "30px desktop, 20px mobile (1.25rem)" },
      "fontSizeMobile":{ "$value": "1.25rem", "$type": "dimension" },
      "lineHeight":    { "$value": "1.25", "$type": "number" },
      "fontWeight":    { "$value": "600", "$type": "fontWeight" },
      "letterSpacing": { "$value": "-0.015em", "$type": "dimension" }
    },
    "h3": {
      "fontSize":      { "$value": "1.5rem", "$type": "dimension", "$description": "24px desktop, 18px mobile (1.125rem)" },
      "fontSizeMobile":{ "$value": "1.125rem", "$type": "dimension" },
      "lineHeight":    { "$value": "1.3", "$type": "number" },
      "fontWeight":    { "$value": "600", "$type": "fontWeight" },
      "letterSpacing": { "$value": "-0.01em", "$type": "dimension" }
    },
    "h4": {
      "fontSize":      { "$value": "1.125rem", "$type": "dimension", "$description": "18px desktop, 16px mobile (1rem)" },
      "fontSizeMobile":{ "$value": "1rem", "$type": "dimension" },
      "lineHeight":    { "$value": "1.4", "$type": "number" },
      "fontWeight":    { "$value": "600", "$type": "fontWeight" },
      "letterSpacing": { "$value": "0", "$type": "dimension" }
    },
    "bodyLarge": {
      "fontSize":      { "$value": "1.125rem", "$type": "dimension", "$description": "18px desktop, 16px mobile (1rem)" },
      "fontSizeMobile":{ "$value": "1rem", "$type": "dimension" },
      "lineHeight":    { "$value": "1.6", "$type": "number" },
      "fontWeight":    { "$value": "400", "$type": "fontWeight" },
      "letterSpacing": { "$value": "0", "$type": "dimension" }
    },
    "body": {
      "fontSize":      { "$value": "0.875rem", "$type": "dimension", "$description": "14px" },
      "lineHeight":    { "$value": "1.5", "$type": "number" },
      "fontWeight":    { "$value": "400", "$type": "fontWeight" },
      "letterSpacing": { "$value": "0", "$type": "dimension" }
    },
    "bodySmall": {
      "fontSize":      { "$value": "0.8125rem", "$type": "dimension", "$description": "13px" },
      "lineHeight":    { "$value": "1.5", "$type": "number" },
      "fontWeight":    { "$value": "400", "$type": "fontWeight" },
      "letterSpacing": { "$value": "0", "$type": "dimension" }
    },
    "caption": {
      "fontSize":      { "$value": "0.75rem", "$type": "dimension", "$description": "12px" },
      "lineHeight":    { "$value": "1.4", "$type": "number" },
      "fontWeight":    { "$value": "500", "$type": "fontWeight" },
      "letterSpacing": { "$value": "0.01em", "$type": "dimension" }
    }
  },

  "spacing": {
    "$description": "Spacing scale (8px base unit, matches Tailwind)",
    "0":   { "$value": "0",     "$type": "dimension" },
    "0.5": { "$value": "0.125rem", "$type": "dimension", "$description": "2px" },
    "1":   { "$value": "0.25rem",  "$type": "dimension", "$description": "4px" },
    "1.5": { "$value": "0.375rem", "$type": "dimension", "$description": "6px" },
    "2":   { "$value": "0.5rem",   "$type": "dimension", "$description": "8px — base unit" },
    "2.5": { "$value": "0.625rem", "$type": "dimension", "$description": "10px" },
    "3":   { "$value": "0.75rem",  "$type": "dimension", "$description": "12px" },
    "3.5": { "$value": "0.875rem", "$type": "dimension", "$description": "14px" },
    "4":   { "$value": "1rem",     "$type": "dimension", "$description": "16px" },
    "5":   { "$value": "1.25rem",  "$type": "dimension", "$description": "20px" },
    "6":   { "$value": "1.5rem",   "$type": "dimension", "$description": "24px" },
    "7":   { "$value": "1.75rem",  "$type": "dimension", "$description": "28px" },
    "8":   { "$value": "2rem",     "$type": "dimension", "$description": "32px" },
    "9":   { "$value": "2.25rem",  "$type": "dimension", "$description": "36px" },
    "10":  { "$value": "2.5rem",   "$type": "dimension", "$description": "40px" },
    "11":  { "$value": "2.75rem",  "$type": "dimension", "$description": "44px" },
    "12":  { "$value": "3rem",     "$type": "dimension", "$description": "48px" },
    "14":  { "$value": "3.5rem",   "$type": "dimension", "$description": "56px" },
    "16":  { "$value": "4rem",     "$type": "dimension", "$description": "64px" },
    "20":  { "$value": "5rem",     "$type": "dimension", "$description": "80px" },
    "24":  { "$value": "6rem",     "$type": "dimension", "$description": "96px" },
    "28":  { "$value": "7rem",     "$type": "dimension", "$description": "112px" },
    "32":  { "$value": "8rem",     "$type": "dimension", "$description": "128px" }
  },

  "borderRadius": {
    "$description": "Border radius scale",
    "none": { "$value": "0",        "$type": "dimension" },
    "sm":   { "$value": "0.25rem",  "$type": "dimension", "$description": "4px" },
    "md":   { "$value": "0.375rem", "$type": "dimension", "$description": "6px" },
    "lg":   { "$value": "0.5rem",   "$type": "dimension", "$description": "8px" },
    "xl":   { "$value": "0.75rem",  "$type": "dimension", "$description": "12px" },
    "2xl":  { "$value": "1rem",     "$type": "dimension", "$description": "16px" },
    "full": { "$value": "9999px",   "$type": "dimension" }
  },

  "shadow": {
    "$description": "Shadow scale — cards use border, not shadow. Shadow is reserved for overlays and elevated elements.",
    "xs": { "$value": "0 1px 2px 0 rgba(18, 18, 16, 0.05)", "$type": "shadow" },
    "sm": { "$value": "0 1px 3px 0 rgba(18, 18, 16, 0.1), 0 1px 2px -1px rgba(18, 18, 16, 0.1)", "$type": "shadow" },
    "md": { "$value": "0 4px 6px -1px rgba(18, 18, 16, 0.1), 0 2px 4px -2px rgba(18, 18, 16, 0.1)", "$type": "shadow" },
    "lg": { "$value": "0 10px 15px -3px rgba(18, 18, 16, 0.1), 0 4px 6px -4px rgba(18, 18, 16, 0.1)", "$type": "shadow" }
  },

  "motion": {
    "$description": "Animation durations and easings. All animations respect prefers-reduced-motion.",

    "duration": {
      "instant":   { "$value": "0ms",   "$type": "duration", "$description": "No animation" },
      "micro":     { "$value": "150ms", "$type": "duration", "$description": "Hover, focus, toggles" },
      "standard":  { "$value": "300ms", "$type": "duration", "$description": "Expand, collapse, slide" },
      "entrance":  { "$value": "500ms", "$type": "duration", "$description": "Page enter, modal open" }
    },
    "easing": {
      "default":   { "$value": "cubic-bezier(0.4, 0, 0.2, 1)", "$type": "cubicBezier", "$description": "General purpose" },
      "in":        { "$value": "cubic-bezier(0.4, 0, 1, 1)", "$type": "cubicBezier", "$description": "Accelerating (exit)" },
      "out":       { "$value": "cubic-bezier(0, 0, 0.2, 1)", "$type": "cubicBezier", "$description": "Decelerating (enter)" },
      "spring":    { "$value": "cubic-bezier(0.34, 1.56, 0.64, 1)", "$type": "cubicBezier", "$description": "Bouncy (toasts, popovers)" }
    }
  },

  "breakpoint": {
    "$description": "Responsive breakpoints (min-width)",
    "sm":  { "$value": "640px",  "$type": "dimension" },
    "md":  { "$value": "768px",  "$type": "dimension" },
    "lg":  { "$value": "1024px", "$type": "dimension" },
    "xl":  { "$value": "1280px", "$type": "dimension" },
    "2xl": { "$value": "1536px", "$type": "dimension" }
  }
}
